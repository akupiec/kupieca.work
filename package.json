{
  "name": "kupieca.work",
  "scripts": {
    "prepare": "husky",
    "test": "prettier -c src/ scripts/",
    "fix": "prettier -w src/ scripts/",
    "start": "concurrently pnpm:start:dev pnpm:start:server pnpm:start:css",
    "start:dev": "tsx --watch --tsconfig src/tsconfig.json scripts/render.ts",
    "start:server": "live-server _site/",
    "start:css": "node scripts/css.mjs --watch",
    "build": "tsx --tsconfig src/tsconfig.json scripts/render.ts && node scripts/css.mjs"
  },
  "dependencies": {
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "esbuild-sass-plugin": "^3.0.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSameLine": true,
    "endOfLine": "lf"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,scss,html,css,mjs}": [
      "prettier --write"
    ]
  }
}
