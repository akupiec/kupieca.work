{
  "name": "kupieca.work",
  "scripts": {
    "prepare": "husky",
    "test": "prettier -c _site/",
    "fix": "prettier -w _site/",
    "start": "tsx --watch --tsconfig src/tsconfig.json src/render.ts & live-server _site/ & sass -w src/home/home.scss _site/home.css",
    "build": "tsx --tsconfig src/tsconfig.json src/render.ts && sass src/home/home.scss _site/home.css"
  },
  "dependencies": {
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "husky": "^9.0.10",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "tsx": "^4.7.1"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSameLine": true,
    "endOfLine": "lf"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18"
  }
}
